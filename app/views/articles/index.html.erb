<div>
    <% @article.each do |t| %>

        <h5>Title :</h5>
        <%= t.title %> 
        <h5>Body :</h5>
        <%=t.body%> <br/>
        <%= link_to "Show", article_path(t.id)%> <br/>
        <%= link_to "Edit",edit_article_path(t.id)  %> <br/>
        <%= link_to 'Delete' , articles_delete_path(t.id),
        method: :delete,
        data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %> <br/>
    <%end%>


        <%=link_to "Create a new Article", new_article_path, class: "new_article" %>

</div>