<h2> List of All Articles </h2>
<%= link_to '<< homepage', root_path %> <br/> <br/>

<table>
    <thead>
        <tr>

            <th>Title</th>
            <th>Body</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
      <% @article.each do |t| %>
        <tr>
            <td><%= t.title %></td>
            <td><%= t.body %></td>
            <td><%= link_to 'Show', article_path(t.id) %></td>
            <td><%= link_to 'Delete' , articles_delete_path(t.id), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></td>
            <td><%= link_to 'Edit', edit_article_path(t) %></td>
           

        </tr>
      <% end %>
    </tbody>
    <td><%= link_to 'Create Article', new_article_path %></td>

</table>